<?xml version="1.0"?>
<layout version="0.0.1">
    <htmlcanvas_show_index>
        <label>Create Image</label>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <path>css/htmlcanvas/drawlibrary.css</path>
            </action>
            <action method="addCss">
                <path>css/htmlcanvas/page.css</path>
            </action>
            <action method="addCss">
                <path>css/htmlcanvas/fonts.css</path>
            </action>
            <!--<action method="addItem">-->
                <!--<type>skin_js</type>-->
                <!--<path>js/jquery-1.7.2.min.js</path>-->
            <!--</action>-->
            <block type="codevog_htmlcanvas/iscanvassupport" name="canvassupport" template="codevog/htmlcanvas/iscanvassupport.phtml" output="toHtml" />
            <action method="addItem">
                <type>skin_js</type>
                <path>js/htmlcanvas/drawlibrary.js</path>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <path>js/htmlcanvas/html2canvas.js</path>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <path>js/htmlcanvas/jquery-ui.min.js</path>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <path>js/htmlcanvas/jquery.form.js</path>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <path>js/htmlcanvas/jquery.plugin.html2canvas.js</path>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <path>js/htmlcanvas/kinetic-v4.3.1-beta2.js</path>
            </action>
            <action method="addCss">
               <path>css/fancybox/jquery.fancybox-buttons.css?v=1.0.5</path>
           </action>
           <action method="addCss">
               <path>css/fancybox/jquery.fancybox.css?v=2.1.2</path>
           </action>
           <action method="addItem">
               <type>skin_js</type>
               <path>js/fancybox/jquery.fancybox.js?v=2.1.3</path>
           </action>
           <action method="addItem">
               <type>skin_js</type>
               <path>js/fancybox/jquery.mousewheel-3.0.6.pack.js</path>
           </action>
           <action method="addItem">
               <type>skin_js</type>
               <path>js/fancybox/jquery.fancybox-buttons.js?v=1.0.5</path>
           </action>
        </reference>
        <reference name="content">
            <block type="codevog_htmlcanvas/canvaspage" name="canvaspage"/>
        </reference>
    </htmlcanvas_show_index>
